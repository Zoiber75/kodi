<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.libarchive"
  version="1.0.0"
  name="Archive support"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.12"/>
<import addon="kodi.binary.global.general" version="1.0.3"/>
<import addon="kodi.binary.global.filesystem" version="1.0.2"/>
<import addon="kodi.binary.instance.vfs" version="2.0.0"/></requires>
  <extension
    point="kodi.vfs"
    protocols="archive|rar"
    extensions=".7z|.tar.gz|.tar.bz2|.tar.xz|.zip|.rar|.tgz|.tbz2|.gz|.bz2|.xz"
    files="true"
    directories="true"
    filedirectories="true"
    library_ios="vfs.libarchive.1.0.0.dylib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Archive support</summary>
    <description lang="en">Archive support</description>
    <platform>ios</platform>
  </extension>
</addon>
